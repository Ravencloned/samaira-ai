{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/frontend/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq-api-key",
    "GEMINI_API_KEY": "@gemini-api-key",
    "LLM_PROVIDER": "groq",
    "WHISPER_MODEL": "base",
    "TTS_SERVICE": "edge",
    "USE_FASTER_WHISPER": "false"
  },
  "regions": ["bom1"]
}
