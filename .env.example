# ===== LLM PROVIDERS =====
# Groq (RECOMMENDED - Free, fast, Llama 3.3 70B)
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini (Alternative)
GEMINI_API_KEY=your_gemini_api_key_here

# LLM Provider Selection: "groq" (default) or "gemini"
LLM_PROVIDER=groq

# ===== TTS PROVIDERS (in order of quality) =====
# Azure Speech (BEST for Hinglish - SSML + phonemes + neural voices)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=centralindia

# ElevenLabs (Great natural voices)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# TTS Provider Selection: "azure" (default), "elevenlabs", or "browser"
TTS_PROVIDER=azure

# ===== SERVER CONFIG =====
HOST=127.0.0.1
PORT=8000
DEBUG=true

# ===== WHISPER (Speech Recognition) =====
# Models: tiny, base, small, medium, large
WHISPER_MODEL=small

# ===== SESSION & MEMORY =====
SESSION_TIMEOUT_MINUTES=30

# MCP Memory (persistent context across conversations)
MCP_ENABLED=true
